<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#B7D7DF" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="1dp"
        android:color="#efefef" />

    <padding android:left="3dp"
             android:top="3dp"
             android:right="3dp"
             android:bottom="3dp"/>

    <!-- 设置四个圆角的半径 -->
    <corners android:radius="5dp"/>
    <!-- 设置一下边距,让空间大一点 -->

</shape>