<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/line_back"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/close"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/line"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/newline_ok"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/ok"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_16"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/linetype"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/scode"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_nl_scode"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/ecode"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_nl_ecode"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--起点埋深-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/smaishen"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_smaishen"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--终点埋深-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/emaishen"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_emaishen"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--流向-->
            <LinearLayout
                android:id="@+id/ll_direc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_20">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/direc"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                    <Spinner
                        android:id="@+id/et_direc"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/direction"
                        android:popupBackground="@android:color/white"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="#efefef"/>

            </LinearLayout>

            <!--埋设方式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/mshway"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <Spinner
                    android:id="@+id/s_mshway"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--管径-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_gj"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/guanjing"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_guanjing1"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--高-->
            <LinearLayout
                android:id="@+id/ll_guanjing2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/gao"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                    <EditText
                        android:id="@+id/et_guanjing2"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/textview_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="#efefef"/>

            </LinearLayout>

            <!--材质-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/caizhi"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <Spinner
                    android:id="@+id/s_caizhi"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center"
                    android:textSize="@dimen/sp_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            <!--道路名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/road"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_road"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="#efefef"/>

            <!--条数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_ts">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/num"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/textview_bg"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#efefef"/>

            </LinearLayout>

            <!--孔数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:orientation="vertical"
                android:id="@+id/ll_ks"
                android:visibility="gone">
                <!--总孔数-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/allkong"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                    <EditText
                        android:id="@+id/et_allkong"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/textview_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="#efefef"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/usedkong"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                    <EditText
                        android:id="@+id/et_usedkong"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/textview_bg"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="#efefef"/>

            </LinearLayout>

            <!--压力-->
            <LinearLayout
                android:id="@+id/ll_yali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/yali"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_16"/>

                    <Spinner
                        android:id="@+id/s_yali"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/spinner_bg"
                        android:popupBackground="@android:color/white"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"
                        android:textSize="@dimen/sp_16"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="#efefef"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>